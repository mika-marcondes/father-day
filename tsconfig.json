// prettier-ignore
{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "skipLibCheck": true,
    "useDefineForClassFields": true,
    "plugins": [
      {
        "transform": "typescript-plugin-styled-components",
        "type": "config",
        "minify": true,
      }
    ],
    "paths": {
      "@assets": ["./src/assets"],
      "@components": ["./src/components"],
      "@hooks": ["./src/hooks"],
      "@screens": ["./src/screens"],
    }
  },
}
